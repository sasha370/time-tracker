<div class="logo">
  <h1>Time Tracker</h1>
</div>

<% if current_user %>
  <ul class="custom-nav nav nav-tabs">
    <li class="nav-item ">
      <%= link_to "", root_path, class: "fa fa-home nav-link #{active?(root_path)}" %>
    </li>

    <!--    Если пользователь в группе Админов, отображаем доп.вкладку -->
    <%= render 'shared/audit_log_tab' if admin? %>

    <% if employee? %>
      <li class="nav-item ">
        <%= link_to "Entries", posts_path, class: "nav-link #{active?(posts_path)} " %>
      </li>
      <li class="nav-item">
        <%= link_to "Request Overtime", new_post_path, class: "nav-link #{active?(new_post_path)} ", id: 'new_post_from_nav' %>
      </li>
    <% end %>

    <li class="nav-item dropdown ml-md-auto">
      <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">
        Account </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
        <%= link_to 'Edit profile', edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to 'Admin dashboard', admin_root_path, class: "dropdown-item" if admin? %>
        <div class="dropdown-divider"></div>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
  </ul>
<% end %>
