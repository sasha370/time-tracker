<tr>
  <td class="d-none d-md-block">    <%= post.id %>  </td>
  <td class="text-center ">    <%= post.daily_hours %>  </td>
  <td>    <%= post.date %>  </td>
<!--  <td>    <%#= post.user.full_name %>  </td>-->
  <td class="d-none d-md-block">    <%= link_to truncate(post.rationale), post %>  </td>
<!--  в хелпере прописали отддельный метод, чтобы отображать цветные значки-->
  <td>   <%= status_badge post.status %></td>

  <td>   <%= link_to "", edit_post_path(post), class: 'fa fa-edit fa-lg index-icons', id: "edit_#{post.id}" if policy(post).update? %> </td>
  <td>      <%= link_to "", post_path(post),  class: 'fa fa-trash  fa-lg index-icons', method: :delete, id: "delete_#{post.id}", data: {confirm: "Are you sure?"} %>
  </td>
</tr>

